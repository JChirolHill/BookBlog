---
title: There and Back Again
css: "post"
layout: main_layout.liquid
---

<div class="container-fluid">
    <div class="row embossed-edges py-4">
        <div class="col-12 col-md-6 text-center float-md-left pr-md-4 pb-3 d-flex justify-content-center align-items-center">
            <img src="/assets/covers/{{ cover }}" alt="Cover for {{ post_title }}">
        </div>
        <div class="col-12 col-md-6 ">
            <h1 class="text-header">{{ post_title }}</h1>
            <h3 class="text-right">{{ post_date | formatted-date }}</h3>
            <div class="text-center mb-2">
                {% if stars >= 1 %}
                    <i class="fas fa-star"></i>
                {% endif %}
                {% if stars >= 2 %}
                    <i class="fas fa-star"></i>
                {% endif %}
                {% if stars >= 3 %}
                    <i class="fas fa-star"></i>
                {% endif %}
                {% if stars >= 4 %}
                    <i class="fas fa-star"></i>
                {% endif %}
                {% if stars >= 5 %}
                    <i class="fas fa-star"></i>
                {% endif %}
            </div>
            {{ content }}
        </div>
    </div>
</div>
